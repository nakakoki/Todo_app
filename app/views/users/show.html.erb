<div class= "head">
  <%= render "tasks/head"%>
</div>
<div class="acount-page">
  <div class="account-title">
    <h2>My Account</h2>
  </div>
  <div class="edit-bottom">
    <%= link_to '編集する', edit_user_path %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
    </div>
    <%= @user.nickname %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">フルネーム</label>
    </div>
    <%= @user.full_name%>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= @user.email %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">役職</label>
    </div>
    <%= @user.position.name %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">チーム</label>
    </div>
    <%= @user.team.name %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
    </div>
    <div class='input-birth-wrap'>
      <%= @user.birth_day %>
    </div>
  </div>
</div>